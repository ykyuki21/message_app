<div class="h-full flex flex-col justify-center pb-10">
  <div class="flex">
    <div class="bg-white shadow-md rounded w-full px-8 pt-6 pb-8 mb-4 mr-2 flex flex-col">
      <%= form_for :session do |f| %>
        <div class="mb-4">
          <%= f.label :name, {class: "block text-grey-darker text-sm font-bold mb-2"} %>
          <%= f.text_field :name, {class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker"} %>
        </div>
        <div class="mb-6">
          <%= f.label :password, {class: "block text-grey-darker text-sm font-bold mb-2"} %>
          <%= f.password_field :password, {placeholder: "********", class: "shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3"} %>
        </div>
        <div class="flex items-center justify-center">
          <%= f.button "Login", class: "bg-blue-500 hover:bg-blue-300 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
    </div>
    <div class="bg-white shadow-md rounded w-full px-8 pt-6 pb-8 mb-4 flex flex-col">
      <div class="flex flex-col items-center justify-center h-full">
        <button class="bg-orange-500 hover:bg-blue-dark text-white font-bold py-2 px-4 rounded">
          Sign Up
        </button>
      </div>
    </div>
  </div>
</div>