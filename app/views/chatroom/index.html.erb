<div class="flex justify-center h-full">
  <div class="flex flex-col flex-initial box-border h-full w-full p-4 border border-gray-400">
    <div class="h-full overflow-scroll mb-2 js-message-container">
      <%= render @messages %>
    </div>
    <%= form_for(@message, url: message_path, html: {class: "flex mt-auto"}, remote: true) do |f| %>
      <%= f.text_field :body, {placeholder: "メッセージを入力", class: "flex-initial h-4 p-4 mr-2 text-sm w-11/12 border rounded"} %>
      <%= f.button "送信", {class: "flex-initial btn bg-blue-500 hover:bg-blue-700 text-white text-sm font-bold py-1 px-2 rounded w-1/12"} %>
    <% end %>
  </div>
</div>